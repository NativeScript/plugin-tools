{
  "$schema": "http://json-schema.org/schema",
  "title": "Add Angular support to package",
  "$id": "add-angular",
  "cli": "nx",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What package would you like to add Angular support for?"
    }
  },
  "required": ["name"]
}
