{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "Remove a package",
  "id": "remove-package",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the name of the package to remove?"
    }
  },
  "required": ["name"]
}